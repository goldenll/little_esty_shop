<h1>Show Coupon Details</h1>

  <p>Name: <%= @coupon.name %></p>
  <p>Code: <%= @coupon.code %></p>
  <%if @coupon.percent_dollar == "percent"%>
    <p>Discount: <%= @coupon.discount %>% </p>
  <%else%>
    <p>Discount: $<%= @coupon.discount %></p>
  <%end%>
  <p>Status: <%= @coupon.status %></p>
  <p>Times Used: <%= @coupon.num_uses %></p>

<% if @coupon.status == ("active") %> 
  <p><%= button_to "Deactivate", method: :patch, merchant: @merchant.id, :deactivate => true %></p>
<% else %>
  <p><%= button_to "Activate", method: :patch, :merchant => @merchant.id, :activate => true %></p>
<% end %>