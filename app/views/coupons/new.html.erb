<h1>Create New Coupon</h1>

<%= form_with method: :post, local: true do |form| %>
<%= form.label :name, "Name:" %>
<%= form.text_field :name, required: true %><br>
<%= form.label :code, "Code:" %>
<%= form.text_field :code, required: true %><br>
<%= form.label :discount, "Amount:" %>
<%= form.text_field :discount, required: true %><br>
<%= form.label :percent_dollar, "%/$?:" %>
<%= form.select(:percent_dollar, ["%", "$"], :include_blank => true, required: true) %>

<%= form.submit "Submit" %>
<% end %>